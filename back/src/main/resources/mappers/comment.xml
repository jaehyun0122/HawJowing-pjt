<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haejwoing.back.model.mapper.CommentMapper">
    <select id='getList' parameterType="int" resultType="com.haejwoing.back.model.dto.Comment">
        SELECT * FROM COMMENT
        WHERE board_idboard=#{boardId}

    </select>

    <insert id="like" parameterType="com.haejwoing.back.model.dto.Heart">
        INSERT INTO COMMENT_LIKES(comment_idcomment, user_id)
        VALUES (#{comment_idcomment}, #{user_id})

    </insert>

    <delete id="unlike" parameterType="com.haejwoing.back.model.dto.Heart">
        DELETE FROM COMMENT_LIKES
        where user_id=#{user_id}

    </delete>

    <insert id="save" parameterType="com.haejwoing.back.model.dto.Comment">

        INSERT INTO COMMENT(content, created_at, board_idboard, user_id)
        VALUES (#{content}, now(), #{board_idboard}, #{user_id})

    </insert>
    <update id="getNum" parameterType="int">

        UPDATE BOARD SET commentNum = commentNum + 1
        WHERE idboard = #{boardId}

    </update>

    <update id="update" parameterType="comment">

        UPDATE COMMENT SET content=#{content}, updated_at=now()
        WHERE idComment = #{idComment}

    </update>

    <delete id="delete" parameterType="comment">

        DELETE FROM COMMENT
        WHERE idcomment = #{commentId}

    </delete>

</mapper>